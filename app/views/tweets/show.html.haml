= render "module/header"
.contents
  .contents__box
    .contents__box__center
      - if @tweet.image.attached?
        .user_name_image_box
          .user_image
            = image_tag @tweet.user.image, size:"35x35", class:"image_css"
          .user_name
            %span
              = @tweet.user.name
        %p.date
          = simple_time(@tweet.created_at)
        .image__box
          = image_tag @tweet.image, size: "350x262"
        %h4.nameplate
          = @tweet.name
        %p.text__area
          = @tweet.text